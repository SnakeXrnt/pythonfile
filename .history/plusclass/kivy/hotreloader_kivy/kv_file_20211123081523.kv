

Screen:
	name: "login"
	MDFloatLayout:
		md_bg_color: 0,0,0,1

        Image:
            id: profile_pic
            source: "asset/il"
            size_hint_y: .2
            pos_hint: {"center_x":.5, "center_y": .2}
            canvas.before:
                Color: 
                    rgba: rgba(202, 0, 13, 255)
                Ellipse:
                    size: 150, 150 #sendiri ?? wkwk
                    pos: self.center_x - 75, self.center_y - 75

		MDLabel:
			text: "Selamat Datang"
			font_size: "25sp"
			font_name: "Roboto"
			color: rgba(107, 127, 214, 255)
			pos_hint: {"center_x":.75, "center_y":.63}

		MDFloatLayout:
			size_hint: .8, .08
			pos_hint: {"center_x":.5, "center_y":.5}

			MDLabel:
				text: "Username"
				font_size: "14sp"
				pos_hint: {"center_x": .5, "center_y":.95}
				color: rgba(107, 127, 214, 255)
				background_color: rgba(107, 127, 214, 255)
			TextInput:
				id: username_entry 
				size_hint: 1, .75
				font_name: "Roboto"
				pos_hint: {"center_x": .5, "center_y": .2}
				background_color: 0,0,0,0
				foreground_color: rgba(107, 127, 214, 255)
				multiline: False
				write_tab: False
			MDIcon:
				icon: "account"
				font_size: "30sp"
				pos_hint: {"center_x":1.4, "center_y":.4}
				color: rgba(107, 127, 214, 255)
			MDFloatLayout:
				size_hint: 1, .03
				pos_hint: {"center_x": .5, "center_y":0}
				md_bg_color: rgba(107, 127, 214, 255)

		MDFloatLayout:
			size_hint: .8, .08
			pos_hint: {"center_x":.5, "center_y":.4}

			MDLabel:
				text: "Password"
				font_size: "14sp"
				pos_hint: {"center_x": .5, "center_y":.7}
				color: rgba(107, 127, 214, 255)
				background_color: rgba(107, 127, 214, 255)
			TextInput:
				id: password_entry
				size_hint: 1, .75
				font_name: "Roboto"
				pos_hint: {"center_x": .5, "center_y": .2}
				background_color: 0,0,0,0
				foreground_color: rgba(107, 127, 214, 255)
				multiline: False
				write_tab: False
				password: True
			MDIcon:
				icon: "key"
				font_size: "30sp"
				pos_hint: {"center_x":1.4, "center_y":.4}
				color: rgba(107, 127, 214, 255)
			MDFloatLayout:
				size_hint: 1, .03
				pos_hint: {"center_x": .5, "center_y": 0}
				md_bg_color: rgba(107, 127, 214, 255)

		Button:
			text: "Masuk"
			size_hint: .4, .08
			pos_hint: {"center_x": .5, "center_y": .2}
			background_color: 0,0,0,0
			font_name: "Roboto"
			font_size: "18sp"
			bold: True
			canvas.before:
				Color:
					rgba: rgba(107, 127, 214, 255)
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius:[25]
			on_press: app.logger()