Screen:
	name: "dashboard"
	MDFloatLayout:
		md_bg_color: rgba(246, 250, 255, 255)
		#MDToolbar:
		#	title: "Dashboard"
		#	md_bg_color: rgba(202, 0, 13, 255)
		#	left_action_items: [["menu"]]
		#	top: root.top

	MDFloatLayout:
		id: layout0
		size_hint: 1, .33
		top: root.top
		pos_hint: {"center_y": .83}
		md_bg_color: rgba(255, 255, 255, 255) #1, 1,1,1
		MDIconButton:
			icon: "menu"
			theme_text_color: "Custom"
			text_color: rgba(202, 0, 13, 255)
			pos_hint: {"center_x":.08, "center_y": .9}
		MDIconButton:
			icon: "dots-vertical"
			theme_text_color: "Custom"
			text_color: rgba(202, 0, 13, 255)
			pos_hint: {"center_x":.92, "center_y": .9}

	MDLabel:
		text: "Astreal"
		font_name: "Roboto"
		font_size: "16sp"
		halign: "left"
		pos_hint: {"center_y":.9}
		x: root.ids.layout0.x + 21
		color: rgba(202, 0, 13, 255)
		bold: True

	Image:
		source: "assets/img/win.png"
		size_hint_y: .1
		pos_hint: {"center_x":.5, "center_y":.8}
		canvas.before:
			Color:
				rgba: rgba(202, 0, 13, 255)
			Ellipse:
				size: 90, 90
				pos: self.center_x - 45, self.center_y - 45

	MDLabel:
		text: "Astrarin Ciel"
		font_name: "Roboto"
		font_size: "18sp"
		halign: "center"
		pos_hint: {"center_x":.5, "center_y":.68}
		bold: True

	MDLabel:
		text: "Setengah Setengah"
		font_name: "Roboto"
		font_size: "15sp"
		halign: "center"
		pos_hint: {"center_x":.5, "center_y":.6}

