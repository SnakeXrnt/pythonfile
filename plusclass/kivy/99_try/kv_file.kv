#:import from_hex kivy.utils.get_color_from_hex

Screen:
	name: "login"
	MDFloatLayout:
		md_bg_color: 0,0,0,1

		Image:
			source: "assets/img/trj.png"
			size_hint: (.7, .25)
			pos_hint: {"center_x":.5, "center_y":.8}
        
        MDLabel: 
            text: 'Login :'
            color: from_hex('#b82d1f')
            font_size: '30sp'
            pos_hint: {"center_x":.52, "center_y":.62}
            bold: True

		MDFloatLayout:
			size_hint: .8, .08
			pos_hint: {"center_x":.5, "center_y":.5}

			MDLabel:
				text: "Username"
				font_size: "14sp"
				pos_hint: {"center_x": .5, "center_y":.95}
				color: rgba(184, 45, 31, 255)
				background_color: rgba(184, 45, 31, 255)
			TextInput:
				id: username_entry 
				size_hint: 1, .75
				font_name: "Roboto"
				pos_hint: {"center_x": .5, "center_y": .2}
				background_color: 0,0,0,0
				foreground_color: rgba(184, 45, 31, 255)
				multiline: False
				write_tab: False
			MDIcon:
				icon: "account"
				font_size: "30sp"
				pos_hint: {"center_x":1.4, "center_y":.4}
				color: rgba(184, 45, 31, 255)
			MDFloatLayout:
				size_hint: 1, .03
				pos_hint: {"center_x": .5, "center_y":0}
				md_bg_color: rgba(184, 45, 31, 255)

		MDFloatLayout:
			size_hint: .8, .08
			pos_hint: {"center_x":.5, "center_y":.4}

			MDLabel:
				text: "Password"
				font_size: "14sp"
				pos_hint: {"center_x": .5, "center_y":.7}
				color: rgba(184, 45, 31, 255)
				background_color: rgba(184, 45, 31, 255)
			TextInput:
				id: password_entry
				size_hint: 1, .75
				font_name: "Roboto"
				pos_hint: {"center_x": .47, "center_y": .2}
				background_color: 0,0,0,0
				foreground_color: rgba(184, 45, 31, 255)
				multiline: False
				write_tab: False
				password: True
			MDIcon:
				icon: "key"
				font_size: "30sp"
				pos_hint: {"center_x":1.4, "center_y":.4}
				color: rgba(184, 45, 31, 255)
			MDFloatLayout:
				size_hint: 1, .03
				pos_hint: {"center_x": .5, "center_y": 0}
				md_bg_color: rgba(184, 45, 31, 255)

		Button:
			text: "Masuk"
			size_hint: .4, .08
			pos_hint: {"center_x": .5, "center_y": .2}
			background_color: 0,0,0,0
			font_name: "Roboto"
			font_size: "18sp"
			bold: True
			canvas.before:
				Color:
					rgba: rgba(107, 127, 214, 255)
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius:[25]