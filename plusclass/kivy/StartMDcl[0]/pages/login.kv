#:import from_hex kivy.utils.get_color_from_hex

Screen:
	name: "login"
	MDFloatLayout:
		md_bg_color: 1,1,1,1
		
		Image:
			source: "assets/img/igs.png"
			size_hint: (.25, .25)
			pos_hint:{"center_x":.15, "center_y":.8}

		MDLabel: 
			text: "Ignatius Global School"
			pos_hint: {"center_x":.8, "center_y":.8}
			font_size: "25sp"
			font_color: "Roboto"
			color: from_hex("#ff0000")

		MDLabel:
			text: "Selamat Datang"
			font_size: "25sp"
			font_color: "Roboto"
			color: from_hex("#101216")
			pos_hint:{"center_x":.6, "center_y":.7}

		MDFloatLayout:
			size_hint: .8, .1
			pos_hint: {"center_x":.5, "center_y":.5}

			MDLabel:
				text: "Username"
				font_size: "14sp"
				pos_hint: {"center_x":.5, "center_y":.95}
				background_color: 0,0,0,0

			TextInput:
				size_hint: 1, .75
				font_name: "Roboto"
				pos_hint: {"center_x":.5, "center_y":.45}
				background_color: 0,0,0,0
				multiline: False
				write_tab: False

			MDIcon:
				icon: "account"
				font_size: "30sp"
				pos_hint: {"center_x":1.4, "center_y":.45}
			MDFloatLayout:
				size_hint: 1, .03
				pos_hint: {"center_x":.5, "center_y":.2}
				md_bg_color: from_hex("#101216")


		MDFloatLayout:
			size_hint: .8, .08
			pos_hint: {"center_x":.5, "center_y":.4}

			MDLabel:
				text: "Password"
				font_size: "14sp"
				pos_hint: {"center_x":.5, "center_y":.85}
				background_color: 0,0,0,0

			TextInput:
				size_hint: 1, .8
				font_name: "Roboto"
				pos_hint: {"center_x":.5, "center_y":.3}
				background_color: 0,0,0,0
				multiline: False
				write_tab: False
				password: True
			MDFloatLayout:
				size_hint: 1, .03
				pos_hint: {"center_x":.5, "center_y":0}
				md_bg_color: from_hex("#101216")

			MDIcon:
				icon: "key"
				font_size: "30sp"
				pos_hint: {"center_x":1.4, "center_y":.4}

		Button:
			text: "masuk"
			size_hint: .6, 0.08
			pos_hint: {"center_x":.5, "center_y":.2}
			background_color: 0,0,0,0
			font_name: "Roboto"
			font_size: "18sp"
			bold: True
			canvas.before:
				Color:
					rgb: 226/255, 0, 48/255, 1
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius:[20]