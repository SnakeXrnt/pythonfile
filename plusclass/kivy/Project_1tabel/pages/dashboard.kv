Screen:
	name: "dashboard"

	MDFloatLayout:
		id: layout0
		md_bg_color: rgba(246, 250, 255, 255)

		MDToolbar:
			title: ""
			md_bg_color: rgba(202, 0, 13, 255)
			left_action_items: [["menu", lambda x : nav_drawer.set_state('toggle')]] # bisa pake toggle / open
			top: root.top

		MDFloatLayout:
			size_hint: 1, .33
			pos_hint: {"center_y": .75}
			md_bg_color: rgba(255, 255, 255, 255) # 1,1,1,1

			MDLabel:
				id: label_username
				text: ""
				font_name: "Roboto"
				font_size: "16sp"
				halign: "left"
				pos_hint: {"center_x":.58, "center_y": .9}
				color: rgba(202, 0, 13, 255)
				bold: True

			Image:
				id: profile_pic
				source: "assets/img/win.png"
				size_hint_y: .2
				pos_hint: {"center_x":.5, "center_y":.6}

				canvas.before:
					Color:
						rgba: rgba(202, 0, 13, 255)
					Ellipse:
						size: 75, 75
						pos: self.center_x - 37.5, self.center_y - 37.5

		MDFloatLayout:
			size_hint: 1, .5
			pos_hint: {"center_y": .43}
			md_bg_color: rgba(255, 255, 255, 255) # 1,1,1,1

			MDCard:
				orientation: "vertical"
				size_hint: None, None
				size: "280dp", "180dp"
				pos_hint: {"center_x": .5, "center_y": .5}

				MDLabel:
					text: "User Profile"
					theme_text_color: "Secondary"

				MDSeparator:
					height: "1dp"

				MDLabel:
					text: ""

				MDLabel:
					id: full_name
					text: ""
					theme_text_color: "Secondary"
					adaptive_height: True

				MDLabel:
					id: birthday
					text: ""
					theme_text_color: "Secondary"
					adaptive_height: True

				MDLabel:
					text: ""

		MDFloatLayout:
			size_hint: 1, .17
			pos_hint: {"center_y": .1}
			md_bg_color: rgba(255, 255, 255, 255) # 1,1,1,1

			BoxLayout:
				orientation : "horizontal"

				Button:
					text: "Edit Profile"
					size_hint: .2, .3
					pos_hint: {"center_x":.7, "center_y":.2}
					background_color: 0,0,0,0
					font_name: "Roboto"
					font_size: "18sp"
					bold: True
					on_press: app.go_to_edit_page()

					canvas.before:
						Color:
							rgb: 202/255, 0, 13/255, 1
						RoundedRectangle:
							size: self.size
							pos: self.pos
							radius: [15]

				Button:
					text: "Change Password"
					size_hint: .2, .3
					pos_hint: {"center_x":.3, "center_y":.2}
					background_color: 0,0,0,0
					font_name: "Roboto"
					font_size: "18sp"
					bold: True
					on_press: app.go_to_change_pw_page()

					canvas.before:
						Color:
							rgb: 202/255, 0, 13/255, 1
						RoundedRectangle:
							size: self.size
							pos: self.pos
							radius: [15]

	MDNavigationDrawer:
		id: nav_drawer

		MDFloatLayout:

			Image:
				source: "assets/img/igs.png"
				size_hint: .2,.2
				pos_hint: {"center_x":.2, "center_y":.9}

			MDRectangleFlatIconButton: #tombol yang ada icon, tulisan dan bisa di atur outline

				icon: "logout-variant"
				text: "Keluar"
				theme_text_color: "Custom"
				line_color: 1,1,1,1
				icon_color: rgba(202, 0, 13, 255)
				text_color: rgba(202, 0, 13, 255)
				pos_hint: {"center_x": .25, "center_y":.8}
				on_press: app.sign_out()

			MDRectangleFlatIconButton:
				icon: "file-find-outline"
				text: "Penelusuran"
				theme_text_color: "Custom"
				line_color: 1,1,1,1
				icon_color: rgba(202, 0, 13, 255)
				text_color: rgba(202, 0, 13, 255)
				pos_hint: {"center_x": .3, "center_y":.75}
				on_press: app.go_to_search_page()